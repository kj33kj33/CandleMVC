@model Fragrance

<h2>Create a New Fragrance</h2>

@using (Html.BeginForm("InsertFragranceToDatabase", "Fragrance", "Post"))
{
    <input asp-for="FragranceID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>
    <input type="number" step="0.01" name="Price" class="form-control" />

    <label asp-for="Rating" class="control-label">Rating</label>
    <input type="number" name="Rating" class="form-control" />

    <div class="form-group">
        <label for="">Select a Top Note</label>
        <select class="form-control" name="TopNotes" value="">
            <option disabled selected value=""> -- </option>
            @foreach (var note in Model.Notes)
            {
                <option value="@note.Name">@note.NoteID @note.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="">Select a Middle Note</label>
        <select class="form-control" name="MiddleNotes" value="">
            <option disabled selected value=""> -- </option>
            @foreach (var note in Model.Notes)
            {
                <option value="@note.Name">@note.NoteID @note.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="">Select a Base Note</label>
        <select class="form-control" name="BaseNotes" value="">
            <option disabled selected value=""> -- </option>
            @foreach (var note in Model.Notes)
            {
                <option value="@note.Name">@note.NoteID @note.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="">Blends Well With</label>
        <select class="form-control" name="BlendsWith" value="">
            <option disabled selected value=""> -- </option>
            @foreach (var frag in Model.Blends)
            {
                <option value="@frag.Name">@frag.FragranceID @frag.Name</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Fragrance" class="btn btn-primary" />

}