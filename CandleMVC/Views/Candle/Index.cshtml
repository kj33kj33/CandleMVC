@model IEnumerable<Candle>

<h2>Candles</h2>

<div style="display: block">
    <a href="/Candle/InsertCandle/">Create a Candle</a>
</div>

<table class="table">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Fragrances</th>
        <th>Notes</th>
        <th>Container</th>
        <th>Wick</th>
        <th>Description</th>
        <th>Price</th>
        @*<th>Image</th>*@
    </tr>

    @foreach(var candle in @Model)
    {
        <tr>
            <td>
                <a href="/Candle/ViewCandle/@candle.CandleID">
                    <img src="~/Images/@{@candle.Image}" />
                    <style>
                        img {
                            border: 2px solid #C0C0C0;
                            padding: 5px;
                            width: 100px;
                            height: 100px;
                        }

                            img:hover {
                                box-shadow: 0 0 2px 1px rgba(0, 140, 186, 0.5);
                            }
                    </style>
                </a>
            </td>
            <th><a href=/Candle/ViewCandle/@candle.CandleID>@candle.Name</a></th>
            <th>@candle.Fragrances</th>
            <th>@candle.Notes</th>
            <th>@candle.Container</th>
            <th>@candle.Wick</th>
            <th>@candle.Description</th>
            <th>@candle.Price</th>
            @*<th>@candle.Image</th>*@
        </tr>
    }
</table>